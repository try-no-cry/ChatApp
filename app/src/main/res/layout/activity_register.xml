<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/register_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/img2"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/register_email_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="   Email"
        android:layout_below="@+id/register_img"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        app:boxStrokeColor="@color/colorPrimary"
        android:layout_alignParentLeft="true" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_email"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/register_img_pwd"
        app:boxStrokeColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:hint="   Password"
        android:layout_below="@+id/register_email_img"
        android:layout_marginTop="25dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_alignParentLeft="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_pwd"
            android:drawableStart="@drawable/key"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email" />

    </com.google.android.material.textfield.TextInputLayout>




    <Button
        android:id="@+id/btn_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_below="@+id/register_img_pwd"
         android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:text="Register"
        android:textColor="#fff"
        android:textSize="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_Register"
        android:id="@+id/tvLogin_register"
        android:text="Already have an account?"
        android:textAlignment="center"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:textSize="17sp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="end" />

</RelativeLayout>
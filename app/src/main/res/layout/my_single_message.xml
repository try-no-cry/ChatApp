<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_single_message_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:layout_margin="3dp"
    android:background="#D4F5BC"
    android:orientation="vertical"
    android:padding="7dp">

    <TextView
        android:id="@+id/my_chat_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="7dp"
        android:text="name"
        android:textColor="#BD1212"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_my_single_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="1.5dp"
        android:layout_weight="10"
        android:gravity="left"
        android:maxWidth="335dp"
        android:paddingLeft="7dp"
        android:text="haa yaaar"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/time_my_single_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="5"
        android:gravity="right"
        android:text="5:15PM"
        android:textColor="#555"
        android:textSize="10sp" />

</LinearLayout>